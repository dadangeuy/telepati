<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.rizaldijs.telepati.client.TelepatiView">
   <center>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="infoTextField" alignment="CENTER" editable="false" />
            <TextArea fx:id="quizTextArea" editable="false" wrapText="true">
               <VBox.margin>
                  <Insets />
               </VBox.margin></TextArea>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="benarButton" mnemonicParsing="false" onAction="#onClickBenar" text="Benar" />
                  <Button fx:id="salahButton" mnemonicParsing="false" onAction="#onClickSalah" text="Salah" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <left>
      <HBox maxWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" minWidth="125.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Player">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <ListView fx:id="playerListView" editable="true" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label text="Score">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <ListView fx:id="scoreListView" />
               </children>
            </VBox>
         </children>
      </HBox>
   </left>
</BorderPane>
